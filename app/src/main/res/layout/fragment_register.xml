<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.RegisterFragment"
    android:background="@color/blue_app">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="150dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:src="@drawable/derecho"
        android:scaleType="fitStart"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/imagenDescription"/>

    <ImageView
        android:id="@+id/bn_back"
        android:layout_width="48dp"
        android:layout_height="49dp"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_back"
        android:layout_margin="12dp"
        android:contentDescription="@string/imagenDescription"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16sp"
        app:cardCornerRadius="18dp"
        android:backgroundTint="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registro"
                android:textColor="@color/blue_app"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/il_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/title_register"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/text_name"
                android:animateLayoutChanges="true"
                style="@style/Widget.App.TextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_name"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/il_birthDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/il_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/text_birthday"
                android:animateLayoutChanges="true"
                style="@style/Widget.App.TextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_birthDate"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/il_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/il_birthDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/text_phone"
                android:animateLayoutChanges="true"
                style="@style/Widget.App.TextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_phone"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/il_employee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/il_phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/text_employee"
                android:animateLayoutChanges="true"
                style="@style/Widget.App.TextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_employee"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/il_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/il_employee"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/text_team"
                android:animateLayoutChanges="true"
                style="@style/Widget.App.TextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_team"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/il_position"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                app:layout_constraintTop_toBottomOf="@id/il_team"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:backgroundTint="@color/grayCoppel"
                >
                <com.google.android.material.chip.Chip
                    android:id="@+id/analyst"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    app:chipIcon="@drawable/ic_analyst"
                    app:iconStartPadding="8dp"
                    android:checkable="true" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/scrum_master"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    app:chipIcon="@drawable/ic_sm"
                    app:iconStartPadding="8dp"
                    android:checkable="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/quality"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    app:chipIcon="@drawable/ic_qa"
                    app:iconStartPadding="8dp"
                    android:checkable="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/android"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    app:chipIcon="@drawable/ic_android"
                    app:iconStartPadding="8dp"
                    android:checkable="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/ios"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    app:chipIcon="@drawable/ic_ios"
                    app:iconStartPadding="8dp"
                    android:checkable="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/backend"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    app:chipIcon="@drawable/ic_backend"
                    android:gravity="center"
                    app:iconStartPadding="8dp"
                    android:checkable="true"/>
            </com.google.android.material.chip.ChipGroup>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/il_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bt_upload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/text_email"
                android:animateLayoutChanges="true"
                style="@style/Widget.App.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="30"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/bt_upload"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/upload_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/il_position"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/blueCoppel"
                android:src="@drawable/ic_icon_photo"
                android:contentDescription="@string/imagenDescription"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/il_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/il_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/text_pass"
                android:animateLayoutChanges="true"
                style="@style/Widget.App.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_password"
                    android:maxLines="1"
                    android:maxLength="8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/il_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/text_pass2"
                android:animateLayoutChanges="true"
                style="@style/Widget.App.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_confirm_password"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bn_register"
                android:backgroundTint="@color/blueCoppel"
                app:layout_constraintTop_toBottomOf="@+id/confirm_password"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="16dp"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="@string/register"
                android:textAllCaps="false"
                android:textSize="22sp"
                app:cornerRadius="30dp"
                app:backgroundTint="@color/blue_app"
                />

            <TextView
                android:id="@+id/label_another_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/o_registrate_con"
                app:layout_constraintTop_toBottomOf="@+id/bn_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/googleg_disabled_color_18"
                app:backgroundTint="@color/grayCoppel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_another_register"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="28dp"
                android:contentDescription="@string/imagenDescription"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>