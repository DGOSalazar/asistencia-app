<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayCoppel"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.AssistenceMainFragment"
    android:nestedScrollingEnabled="true"
    android:animateLayoutChanges="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scroll_container"
        android:background="@color/blue_app"
        android:elevation="51dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp">
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="82dp"
                android:layout_height="15dp"
                android:src="@drawable/derecho"
                android:layout_marginTop="41dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/icon_bancoppel" />
            <ImageView
                android:id="@+id/tv_menu_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/tv_welcome"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/grey1"
                android:src="@drawable/ic_baseline_menu_24"
                android:contentDescription="@string/menu_icon" />
            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/iv_logo"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/welcome_message"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="28sp"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_welcome"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="@string/welcome_date"/>
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:layout_marginBottom="31dp"
                android:textSize="14sp"
                android:text="@string/welcome_remember"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:visibility="visible">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mc_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:elevation="50dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintTop_toTopOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/v_back"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:padding="14sp"
                    app:tint="@color/blue_app"
                    app:layout_constraintTop_toTopOf="@id/tv_month"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_month"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_month"
                    android:src="@drawable/ic_back"
                    android:contentDescription="@string/back_arrow_button" />
                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/month"
                    android:textColor="@color/blue_app"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/v_back"
                    app:layout_constraintEnd_toStartOf="@id/v_next"
                    android:layout_marginTop="8dp"
                    />
                <ImageView
                    android:id="@+id/v_next"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:padding="14sp"
                    app:tint="@color/blue_app"
                    app:layout_constraintTop_toTopOf="@id/tv_month"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_month"
                    app:layout_constraintStart_toEndOf="@id/tv_month"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_back"
                    android:rotation="180"
                    android:contentDescription="@string/next_arrow_button" />
                <View
                    android:id="@+id/v_separation1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_month"
                    android:layout_marginTop="8dp"
                    android:background="@color/grey3"
                    />

                <LinearLayout
                    android:id="@+id/days_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/v_separation1"
                    >
                    <TextView
                        android:id="@+id/tv_monday"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/monday"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/grey2"
                        />
                    <TextView
                        android:id="@+id/tv_tuesday"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/tuesday"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/grey2"
                        />
                    <TextView
                        android:id="@+id/tv_wednesday"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/Wednesday"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/grey2"
                        />
                    <TextView
                        android:id="@+id/tv_thursday"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/Thursday"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/grey2"
                        />
                    <TextView
                        android:id="@+id/tv_friday"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/Friday"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/grey2"
                        />
                </LinearLayout>

                <View
                    android:id="@+id/v_separation2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/days_container"
                    android:layout_marginTop="3dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/day_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_separation2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="5"
                    tools:itemCount="20"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_actual_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mc_calendar"
            android:text="@string/Today_on_office"
            android:textSize="24sp"
            android:textColor="@color/grey2"
            android:textStyle="bold"
            android:layout_marginTop="34dp"/>

        <TextView
            android:id="@+id/tv_assist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_actual_month"
            android:textSize="14sp"
            android:textColor="@color/grey2"
            tools:text="@string/Total_assist"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mc_assist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_assist"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="72dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="24dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:listitem="@layout/colaborator_view"
            android:nestedScrollingEnabled="false"
            />

        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:id="@+id/progress"
            app:layout_constraintTop_toBottomOf="@id/tv_assist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp100"
            android:indeterminate="true"
            android:visibility="visible"
            android:elevation="@dimen/dp100"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_confirmAsit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/analyst_color"
        android:src="@drawable/ic_check_assit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dp8"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/loader"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:elevation="100sp"
        android:background="@color/transparent_grey"
        android:gravity="center"
        tools:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="129dp"
            android:src="@drawable/icono_app" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>