<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.register.capture.StepOneRegisterFragment">

    <ImageView
        android:id="@+id/logo_coppel"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintTop_toTopOf="@id/text_title"
        app:layout_constraintBottom_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="@id/tv_create_account"
        app:layout_constraintEnd_toStartOf="@id/text_title"
        android:src="@drawable/img_3"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logo_coppel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_create_account"
        app:layout_constraintEnd_toEndOf="@id/tv_create_account"
        android:text="@string/title_register"
        android:textSize="22sp"
        android:textColor="@color/blue_app"
        android:layout_marginTop="40dp"
        android:layout_marginStart="8dp"
        />
    <TextView
        android:id="@+id/tv_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_create_account"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/blue_app"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintBottom_toTopOf="@id/field_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/field_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_create_account"
        app:layout_constraintBottom_toTopOf="@id/bt_next">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_mail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/il_pass1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/email"
            app:boxBackgroundColor="@color/white2"
            android:gravity="end"
            style="@style/Widget.App.TextInputLayout"
            app:helperTextTextColor="@color/black"
            app:helperText="@string/helper_email"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_email"
                android:maxLines="1"
                android:maxLength="30"
                android:textSize="16sp"
                android:inputType="textWebEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_texview"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_helper_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/il_mail"
            app:layout_constraintTop_toBottomOf="@id/il_mail"
            android:textStyle="italic"
            android:textSize="12sp"
            android:text="@string/helper_email"
            android:visibility="gone"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_pass1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/il_mail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/il_pass2"
            android:layout_marginHorizontal="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:hint="@string/hint_pass"
            app:boxBackgroundColor="@color/white2"
            android:gravity="end"
            style="@style/Widget.App.TextInputLayout"
            app:counterMaxLength="8"
            app:helperTextTextColor="@color/black"
            app:helperText="@string/helper_pass"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_pass1"
                android:maxLines="1"
                android:maxLength="8"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/bg_texview"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_helper_pass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/il_pass1"
            app:layout_constraintTop_toBottomOf="@id/il_pass1"
            android:textStyle="italic"
            android:textSize="12sp"
            android:text="@string/helper_pass"
            android:visibility="gone"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_pass2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/il_pass1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:hint="@string/hint_pass2"
            app:boxBackgroundColor="@color/white2"
            android:gravity="end"
            style="@style/Widget.App.TextInputLayout"
            app:helperTextTextColor="@color/black"
            app:helperText="@string/helper_pass2"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_pass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLength="8"
                android:maxLines="1"
                android:textSize="16sp"
                android:background="@drawable/bg_texview"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_helper_pass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/il_pass2"
            app:layout_constraintTop_toBottomOf="@id/il_pass2"
            android:textStyle="italic"
            android:textSize="12sp"
            android:text="@string/helper_pass2"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_next"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Siguiente"
        android:textAllCaps="false"
        android:textColor="@color/grey2"
        android:backgroundTint="@color/grey7"
        android:textSize="22dp"
        app:cornerRadius="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/field_container"
        app:layout_constraintBottom_toTopOf="@id/v_icon_advance"
        android:enabled="false"/>

    <View
        android:id="@+id/v_icon_advance"
        android:background="@drawable/ic_baseline_circle_24"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="@color/blue_app"
        app:layout_constraintTop_toBottomOf="@id/bt_next"
        app:layout_constraintEnd_toStartOf="@id/v_icon_advance1"
        app:layout_constraintStart_toStartOf="@id/bt_next"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/v_icon_advance1"
        android:background="@drawable/ic_baseline_circle_24"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/bt_next"
        app:layout_constraintStart_toEndOf="@id/v_icon_advance"
        app:layout_constraintEnd_toStartOf="@id/v_icon_advance2"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/v_icon_advance2"
        android:background="@drawable/ic_baseline_circle_24"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/bt_next"
        app:layout_constraintStart_toEndOf="@id/v_icon_advance1"
        app:layout_constraintEnd_toEndOf="@id/bt_next"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>