<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grayCoppel"
    tools:context=".ui.home.AssistenceWeekFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/grayCoppel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:backgroundTint="#2A4EA9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp"
            android:layout_marginStart="22dp"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendario"
            android:textSize="22dp"
            android:textColor="#2A4EA9"
            app:layout_constraintStart_toEndOf="@id/iv_back"
            app:layout_constraintTop_toTopOf="@id/iv_back"/>
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/blueCoppel"
            android:src="@drawable/ic_baseline_menu_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_back"
            android:layout_marginEnd="22dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scrool_container"
            android:layout_width="0sp"
            android:layout_height="0sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                app:layout_constraintTop_toBottomOf="@id/mc_calendar"
                android:layout_marginEnd="28dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/tv_title_assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Juan Carlos Â¿Deseas asistir"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="24sp"
                        android:textColor="@color/grey2"
                        android:layout_marginTop="34dp"/>
                    <TextView
                        android:id="@+id/tv_title_assist2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="el lunes 9 de Enero?"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_assist"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="24sp"
                        android:textColor="@color/grey2"
                        android:textStyle="bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_week"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        tools:listitem="@layout/day_selected_view"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        android:layout_marginTop="22dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_assist2"
                        app:layout_constraintBottom_toTopOf="@id/bt_add"
                        app:layout_goneMarginTop="16dp"
                        android:paddingBottom="16dp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bt_add"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/blueCoppel"
                        app:layout_constraintTop_toBottomOf="@id/recycler_week"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Registrar asistencia"
                        android:textAllCaps="false"
                        android:layout_marginTop="22dp"
                        android:textSize="20sp"
                        app:cornerRadius="30dp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/tv_actual_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cl_question"
                    android:text="7 Asistentes:"
                    android:textSize="24sp"
                    android:textColor="@color/grey2"
                    android:textStyle="bold"
                    android:layout_marginTop="34dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mc_assist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_actual_month"
                    app:cardCornerRadius="30dp"
                    android:layout_marginTop="24dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_users"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/colaborator_view"
                        />

                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>