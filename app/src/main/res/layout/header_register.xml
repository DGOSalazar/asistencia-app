<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logo_coppel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp55"
        android:layout_marginStart="@dimen/dp80"
        android:layout_marginTop="@dimen/dp80"
        android:src="@drawable/img_3"
        android:text="@string/hello_blank_fragment" />


    <TextView
        android:id="@+id/text_title"
        android:layout_width="@dimen/dp180"
        android:layout_height="0dp"
        android:text="@string/title_register"
        android:textColor="@color/blue_app"
        android:textSize="@dimen/sp20"
        android:layout_marginStart="@dimen/dp8"
        app:layout_constraintTop_toTopOf="@id/logo_coppel"
        app:layout_constraintBottom_toBottomOf="@id/logo_coppel"
        app:layout_constraintStart_toEndOf="@id/logo_coppel"/>


</androidx.constraintlayout.widget.ConstraintLayout>