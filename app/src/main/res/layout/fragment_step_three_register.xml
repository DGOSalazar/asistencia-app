<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.capture.StepThreeRegisterFragment">

    <ImageView
        android:id="@+id/logo_coppel"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintTop_toTopOf="@id/text_title"
        app:layout_constraintBottom_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="@id/tv_create_account"
        app:layout_constraintEnd_toStartOf="@id/text_title"
        android:src="@drawable/img_3"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logo_coppel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_create_account"
        app:layout_constraintEnd_toEndOf="@id/tv_create_account"
        android:text="@string/title_register"
        android:textSize="22sp"
        android:textColor="@color/blue_app"
        android:layout_marginTop="40dp"
        android:layout_marginStart="8dp"
        />
    <TextView
        android:id="@+id/tv_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_last_steps"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/blue_app"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintBottom_toTopOf="@id/iv_charge_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_charge_photo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@id/tv_create_account"
        app:layout_constraintBottom_toTopOf="@id/field_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:src="@drawable/img_4"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/field_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/iv_charge_photo"
        app:layout_constraintBottom_toTopOf="@id/bt_next">
        <TextView
            android:id="@+id/tv_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_user"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue_app"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_helper_position"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_helper_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/spinner_position"
            app:layout_constraintTop_toTopOf="@id/spinner_position"
            app:layout_constraintBottom_toBottomOf="@id/spinner_position"
            android:textColor="@color/grey2"
            android:textSize="16sp"
            android:text="Puesto:"/>
        <Spinner
            android:id="@+id/spinner_position"
            android:layout_width="236dp"
            android:layout_height="30dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="16dp"
            android:background="@color/white2"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name_user"
            app:layout_constraintBottom_toTopOf="@id/spinner_team"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_helper_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/spinner_team"
            app:layout_constraintTop_toTopOf="@id/spinner_team"
            app:layout_constraintBottom_toBottomOf="@id/spinner_team"
            android:textColor="@color/grey2"
            android:textSize="16sp"
            android:text="Iniciativa:"/>
        <Spinner
            android:id="@+id/spinner_team"
            android:layout_width="236dp"
            android:layout_height="30dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="18dp"
            android:background="@color/white2"
            app:layout_constraintTop_toBottomOf="@id/spinner_position"
            app:layout_constraintBottom_toTopOf="@id/il_num_employee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_helper_team"/>
        <TextView
            android:id="@+id/tv_helper_no_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/il_num_employee"
            app:layout_constraintTop_toTopOf="@id/il_num_employee"
            app:layout_constraintBottom_toBottomOf="@id/il_num_employee"
            android:textColor="@color/grey2"
            android:textSize="16sp"
            android:text="Numero de empleado:"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_num_employee"
            android:layout_width="140dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/spinner_team"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="32dp"
            android:layout_marginEnd="16dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/white2"
            android:gravity="end"
            style="@style/Widget.App.TextInputLayout"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_pass2"
                android:maxLines="1"
                android:maxLength="30"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_next"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Finalizar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue_app"
        android:textSize="22dp"
        app:cornerRadius="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/field_container"
        app:layout_constraintBottom_toTopOf="@id/v_icon_advance"/>

    <View
        android:id="@+id/v_icon_advance"
        android:background="@drawable/ic_baseline_circle_24"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="@color/blue_app"
        app:layout_constraintTop_toBottomOf="@id/bt_next"
        app:layout_constraintEnd_toStartOf="@id/v_icon_advance1"
        app:layout_constraintStart_toStartOf="@id/bt_next"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/v_icon_advance1"
        android:background="@drawable/ic_baseline_circle_24"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:backgroundTint="@color/blue_app"
        app:layout_constraintTop_toBottomOf="@id/bt_next"
        app:layout_constraintStart_toEndOf="@id/v_icon_advance"
        app:layout_constraintEnd_toStartOf="@id/v_icon_advance2"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/v_icon_advance2"
        android:background="@drawable/ic_baseline_circle_24"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/blue_app"
        app:layout_constraintTop_toBottomOf="@id/bt_next"
        app:layout_constraintStart_toEndOf="@id/v_icon_advance1"
        app:layout_constraintEnd_toEndOf="@id/bt_next"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>