<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.userScreen.UserScreenFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/blue_app"
        android:elevation="51dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp">
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="82dp"
                android:layout_height="15dp"
                android:src="@drawable/derecho"
                android:layout_marginTop="41dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/icon_bancoppel" />
            <ImageView
                android:id="@+id/tv_menu_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/iv_logo"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/grey1"
                android:src="@drawable/ic_baseline_menu_24"
                android:contentDescription="@string/menu_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iv_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="@dimen/dp100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp50"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:backgroundTint="@color/white"
        app:cardElevation="@dimen/dp100">

        <ImageView
            android:id="@+id/iv_userPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_4"
            android:contentDescription="@string/employee_photo"/>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tv_name_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        app:layout_constraintTop_toBottomOf="@id/iv_img"
        android:text="@string/nameUserScreen"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/sp16"
        android:textColor="@color/blue_app"
        />
    <TextView
        android:id="@+id/tv_position_user"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        app:layout_constraintTop_toBottomOf="@id/tv_name_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_android"
        android:text="@string/positionAndTeam"
        android:gravity="center"
        android:textSize="@dimen/sp14"
        android:textColor="@color/blue_app"
        />

    <TextView
        android:id="@+id/colaboratorNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_position_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="9030872"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/bt_edit"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_edit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp60"
        android:layout_marginTop="@dimen/dp8"
        app:layout_constraintTop_toBottomOf="@id/colaboratorNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeWidth="2dp"
        app:strokeColor="@color/blue_app"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/dp40"
        android:textColor="@color/blue_app"
        android:textAllCaps="false"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        android:text="@string/edit_profile"
        />
    <View
        android:id="@+id/v_separation3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey7"
        android:layout_marginTop="@dimen/dp16"
        app:layout_constraintTop_toBottomOf="@id/bt_edit"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/il_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_separation3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_resumenH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_notification"
            android:layout_marginVertical="@dimen/dp8"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/sp18"
            android:text="@string/summary"
            android:textColor="@color/grey5"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_notification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_resumenH"
            android:layout_marginVertical="@dimen/dp8"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/sp18"
            android:textColor="@color/blue_app"
            android:text="@string/notifyctions"/>

        <View
            android:id="@+id/v_activateNotification"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:background="@color/blue_app"
            app:layout_constraintStart_toStartOf="@id/tv_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_notification"
            />

        <View
            android:id="@+id/v_activateLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/grey7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_activateNotification"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_activateLine"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/dp24"
        android:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notifyRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/notification_list_view"
            android:nestedScrollingEnabled="false"
            />
    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/il_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_separation3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_resumen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_notificationH"
            android:layout_marginVertical="@dimen/dp8"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/sp18"
            android:text="@string/summary"
            android:textColor="@color/blue_app" />

        <TextView
            android:id="@+id/tv_notificationH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_resumen"
            android:layout_marginVertical="@dimen/dp8"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/grey5"
            android:textSize="@dimen/sp18"
            android:text="@string/notifyctions"/>

        <View
            android:id="@+id/v_activateResumen"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:background="@color/blue_app"
            app:layout_constraintStart_toStartOf="@id/tv_resumen"
            app:layout_constraintEnd_toEndOf="@id/tv_resumen"
            app:layout_constraintTop_toBottomOf="@id/tv_resumen"
            />
        <View
            android:id="@+id/v_activateLine2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/grey7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_activateResumen"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/il_personalData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_activateLine2"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginHorizontal="@dimen/dp24">
            <TextView
                android:id="@+id/tv_title_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/personal_info"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textSize="@dimen/sp18"
                android:textColor="@color/grey2"
                android:gravity="start"/>

            <TextView
                android:id="@+id/tv_cost_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_title_data"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_cost_center"
                android:layout_marginTop="@dimen/dp8"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:text="@string/cost"/>
            <EditText
                android:id="@+id/et_cost_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_cost_center"
                app:layout_constraintTop_toTopOf="@id/tv_cost_center"
                app:layout_constraintBottom_toBottomOf="@id/tv_cost_center"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Cambiar crentro de costos"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_manager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_manager"
                app:layout_constraintTop_toBottomOf="@id/tv_cost_center"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:text="@string/manager"/>
            <EditText
                android:id="@+id/et_manager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_manager"
                app:layout_constraintTop_toTopOf="@id/tv_manager"
                app:layout_constraintBottom_toBottomOf="@id/tv_manager"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Cambiar tu Gerente"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_manager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_position"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp8"
                android:text="@string/positionRol"/>
            <EditText
                android:id="@+id/et_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_position"
                app:layout_constraintTop_toTopOf="@id/tv_position"
                app:layout_constraintBottom_toBottomOf="@id/tv_position"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Cambiar tu puesto"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_manager_sup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_manager_sup"
                app:layout_constraintTop_toBottomOf="@id/tv_position"
                android:layout_marginTop="@dimen/dp8"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:text="@string/maanager_sup"/>
            <EditText
                android:id="@+id/et_manager_sup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_manager_sup"
                app:layout_constraintTop_toTopOf="@id/tv_manager_sup"
                app:layout_constraintBottom_toBottomOf="@id/tv_manager_sup"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Cambiar jefé de área"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_project"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_project"
                app:layout_constraintTop_toBottomOf="@id/tv_manager_sup"
                android:layout_marginTop="@dimen/dp8"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:text="@string/project" />
            <EditText
                android:id="@+id/et_project"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_project"
                app:layout_constraintTop_toTopOf="@id/tv_project"
                app:layout_constraintBottom_toBottomOf="@id/tv_project"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Cambiar tu proyecto"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tv_scrum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_project"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_sm"
                android:layout_marginTop="@dimen/dp8"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:text="@string/scrum" />
            <EditText
                android:id="@+id/et_sm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_scrum"
                app:layout_constraintTop_toTopOf="@id/tv_scrum"
                app:layout_constraintBottom_toBottomOf="@id/tv_scrum"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                android:hint="Cambiar scrum master"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/il_personalHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/il_personalData"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginHorizontal="@dimen/dp24">
        <TextView
                android:id="@+id/tv_title_data1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/history"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textSize="@dimen/sp18"
                android:textColor="@color/grey2"
                android:gravity="start"/>
            <TextView
                android:id="@+id/tv_date_enroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_inDate"
                app:layout_constraintTop_toBottomOf="@id/tv_title_data1"
                android:layout_marginTop="@dimen/dp8"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:text="@string/inDate" />
            <EditText
                android:id="@+id/et_inDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_date_enroll"
                app:layout_constraintTop_toTopOf="@id/tv_date_enroll"
                app:layout_constraintBottom_toBottomOf="@id/tv_date_enroll"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Cambiar fecha ingreso"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_worker_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_date_enroll"
                android:layout_marginTop="@dimen/dp8"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:text="@string/workerDays"/>
            <TextView
                android:id="@+id/tv_office_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_worker_days"
                android:layout_marginTop="@dimen/dp8"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:text="@string/daysInOffice"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>