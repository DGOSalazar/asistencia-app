<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.userScreen.UserScreenFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/blue_app"
        android:elevation="51dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp">
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="82dp"
                android:layout_height="15dp"
                android:src="@drawable/derecho"
                android:layout_marginTop="41dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/icon_bancoppel" />
            <ImageView
                android:id="@+id/tv_menu_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/iv_logo"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/grey1"
                android:src="@drawable/ic_baseline_menu_24"
                android:contentDescription="@string/menu_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iv_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="@dimen/dp100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp50"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:backgroundTint="@color/black"
        app:cardElevation="@dimen/dp100">

        <ImageView
            android:id="@+id/iv_userPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_4"/>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tv_name_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        app:layout_constraintTop_toBottomOf="@id/iv_img"
        android:text="@string/nameUserScreen"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/sp16"
        android:textColor="@color/blue_app"
        />
    <TextView
        android:id="@+id/tv_position_user"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        app:layout_constraintTop_toBottomOf="@id/tv_name_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_android"
        android:text="@string/positionAndTeam"
        android:gravity="center"
        android:textSize="@dimen/sp14"
        android:textColor="@color/blue_app"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_edit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp60"
        android:layout_marginTop="@dimen/dp16"
        app:layout_constraintTop_toBottomOf="@id/tv_position_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeWidth="2dp"
        app:strokeColor="@color/blue_app"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/dp40"
        android:textColor="@color/blue_app"
        android:textAllCaps="false"
        android:textSize="@dimen/dp16"
        android:textStyle="bold"
        android:text="Editar perfil"
        />
    <View
        android:id="@+id/v_separation3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey7"
        android:layout_marginTop="@dimen/dp16"
        app:layout_constraintTop_toBottomOf="@id/bt_edit"/>
    <TextView
        android:id="@+id/tv_resumen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_separation3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_notification"
        android:layout_marginVertical="@dimen/dp8"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/sp18"
        android:textColor="@color/blue_app"
        android:text="Resumen"/>
    <View
        android:id="@+id/v_activateNotification"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:background="@color/blue_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_resumen"
        app:layout_constraintTop_toBottomOf="@id/tv_resumen"
        />
    <TextView
        android:id="@+id/tv_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_separation3"
        app:layout_constraintStart_toEndOf="@id/tv_resumen"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/dp8"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/sp18"
        android:textColor="@color/grey5"
        android:text="Notificaciones"/>
    <View
        android:id="@+id/v_activateResumen"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:background="@color/blue_app"
        app:layout_constraintStart_toStartOf="@id/tv_notification"
        app:layout_constraintEnd_toEndOf="@id/tv_notification"
        app:layout_constraintTop_toBottomOf="@id/tv_resumen"
        app:layout_constraintBottom_toTopOf="@id/v_separation4"
        android:visibility="gone"/>
    <View
        android:id="@+id/v_separation4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey7"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/v_activateResumen"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_separation4"
        android:visibility="visible">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notifyRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/notification_list_view"
            />
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/il_personalData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_separation4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginHorizontal="@dimen/dp24">
        <TextView
            android:id="@+id/tv_title_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personal_info"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:textSize="@dimen/sp18"
            android:textColor="@color/grey2"
            android:gravity="start"/>
        <TextView
            android:id="@+id/tv_colaborator_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title_data"
            android:textSize="@dimen/dp16"
            android:textStyle="bold"
            android:text="@string/employee_num"/>
        <TextView
            android:id="@+id/tv_cost_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_colaborator_no"
            android:textSize="@dimen/dp16"
            android:textStyle="bold"
            android:text="@string/cost"/>
        <TextView
            android:id="@+id/tv_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_cost_center"
            android:textSize="@dimen/dp16"
            android:textStyle="bold"
            android:text="@string/manager"/>
        <TextView
            android:id="@+id/tv_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_manager"
            android:textSize="@dimen/dp16"
            android:textStyle="bold"
            android:text="@string/positionRol"/>
        <TextView
            android:id="@+id/tv_manager_sup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_position"
            android:textSize="@dimen/dp16"
            android:textStyle="bold"
            android:text="@string/maanager_sup"/>
        <TextView
            android:id="@+id/tv_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_manager_sup"
            android:textSize="@dimen/dp16"
            android:textStyle="bold"
            android:text="@string/project"/>
        <TextView
            android:id="@+id/tv_scrum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_project"
            android:textSize="@dimen/dp16"
            android:textStyle="bold"
            android:text="@string/scrum"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/v_separation5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey7"
        android:layout_marginTop="@dimen/dp16"
        app:layout_constraintTop_toBottomOf="@id/il_personalData"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/il_personalHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_separation5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginHorizontal="@dimen/dp24">
        <TextView
            android:id="@+id/tv_title_data1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:textSize="@dimen/sp18"
            android:textColor="@color/grey2"
            android:gravity="start"/>
        <TextView
            android:id="@+id/tv_date_enroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title_data1"
            android:textSize="@dimen/dp16"
            android:textStyle="bold"
            android:text="@string/inDate"/>
        <TextView
            android:id="@+id/tv_worker_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_date_enroll"
            android:textSize="@dimen/dp16"
            android:textStyle="bold"
            android:text="@string/workerDays"/>
        <TextView
            android:id="@+id/tv_office_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_worker_days"
            android:textSize="@dimen/dp16"
            android:textStyle="bold"
            android:text="@string/daysInOffice"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3sp"
        app:layout_constraintBottom_toTopOf="@+id/nav_bottom_container"
        android:background="@drawable/bg_nav_container"/>
    <LinearLayout
        android:id="@+id/nav_bottom_container"
        android:layout_width="0sp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grey1"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_home_nav"
            android:layout_width="0sp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@+id/home"
            app:layout_constraintBottom_toBottomOf="@+id/home"
            app:layout_constraintLeft_toLeftOf="@+id/home"
            app:layout_constraintRight_toRightOf="@+id/home"
            android:layout_weight="1"
            android:foreground="@drawable/foreground_nav_button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_selector_nav"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/ic_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Inicio"
                    android:textColor="@color/grey2"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_team_nav"
            android:layout_width="0sp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@+id/home"
            app:layout_constraintBottom_toBottomOf="@+id/home"
            app:layout_constraintLeft_toLeftOf="@+id/home"
            app:layout_constraintRight_toRightOf="@+id/home"
            android:layout_weight="1"
            android:foreground="@drawable/foreground_nav_button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/team"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_team" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equipo"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey2"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_my_profile_nav"
            android:layout_width="0sp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@+id/home"
            app:layout_constraintBottom_toBottomOf="@+id/home"
            app:layout_constraintLeft_toLeftOf="@+id/home"
            app:layout_constraintRight_toRightOf="@+id/home"
            android:layout_weight="1"
            android:background="@drawable/bg_buttom_nav"
            android:foreground="@drawable/foreground_nav_button">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/myProfile"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_my_profile"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/team"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey2"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>